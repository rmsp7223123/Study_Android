<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:id="@+id/head_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="나의 당근"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/head_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="240dp"
                    android:layout_toRightOf="@+id/head_text1"
                    android:layout_weight="1"
                    android:src="@drawable/ic_setting" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/view_line_margin"
                android:background="@color/background_view" />

            <LinearLayout
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/account_img"
                    android:layout_width="10dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/baseline_account_circle_24" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="이름이름이름" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="주소주소주소" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/test_shape1">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.3"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="중고거래는 이제 당근페이로 해보세요!"
                        android:gravity="center"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_top_menu1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="판매내역"
                        android:textSize="@dimen/sub_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_top_menu2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="구매내역"
                        android:textSize="@dimen/sub_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_top_menu3" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="관심목록"
                        android:textSize="@dimen/sub_text" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_line_height"
                android:layout_margin="@dimen/view_line_margin"
                android:background="@color/background_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:layout_marginVertical="@dimen/menu_head_margin"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="사장님 메뉴"
                    android:textStyle="bold"
                    android:textSize="@dimen/menu_text"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_marginVertical="@dimen/menu_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_menu1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/menu_text_margin"
                        android:text="비즈프로필 관리"
                        android:textSize="@dimen/sub_text"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="@dimen/menu_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_menu2"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/menu_text_margin"
                        android:text="광고"
                        android:textSize="@dimen/sub_text"/>

                </LinearLayout>





            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_line_height"
                android:layout_margin="@dimen/view_line_margin"
                android:background="@color/background_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:layout_marginVertical="@dimen/menu_head_margin"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="나의 활동"
                    android:textStyle="bold"
                    android:textSize="@dimen/menu_text"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_marginVertical="@dimen/menu_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_menu3"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/menu_text_margin"
                        android:text="내 동네 설정"
                        android:textSize="@dimen/sub_text"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="@dimen/menu_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_menu4"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/menu_text_margin"
                        android:text="동네 인증하기"
                        android:textSize="@dimen/sub_text"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="@dimen/menu_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_menu5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/menu_text_margin"
                        android:text="키워드 알림"
                        android:textSize="@dimen/sub_text"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="@dimen/menu_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_menu6"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/menu_text_margin"
                        android:text="모아보기"
                        android:textSize="@dimen/sub_text"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginVertical="@dimen/menu_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:src="@mipmap/ic_mbj_launcher"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/menu_text_margin"
                        android:text="당근가계부"
                        android:textSize="@dimen/sub_text"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>